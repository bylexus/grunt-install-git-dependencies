{
    "name": "grunt-install-git-dependencies",
    "description": "Installs git dependencies defined in package.json",
    "version": "0.0.1",
    "homepage": "https://github.com/bylexus/grunt-install-git-dependencies",
    "author": {
        "name": "Alexander Schenkel",
        "email": "alex@alexi.ch",
        "url": "https://alexi.ch/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bylexus/grunt-install-git-dependencies.git"
    },
    "bugs": {
        "url": "https://github.com/bylexus/grunt-install-git-dependencies/issues"
    },
    "licenses": [
        {
            "type": "MIT",
            "url": "https://github.com/bylexus/grunt-install-git-dependencies/blob/master/LICENSE-MIT"
        }
    ],
    "engines": {
        "node": ">= 0.12.0"
    },
    "scripts": {
        "test": "grunt test"
    },
    "devDependencies": {
        "eslint": "^4.9.0",
        "eslint-config-prettier": "^2.6.0",
        "eslint-plugin-prettier": "^2.3.1",
        "grunt": "~0.4.5",
        "grunt-contrib-clean": "^0.5.0",
        "grunt-contrib-jshint": "^0.9.2",
        "grunt-contrib-nodeunit": "^0.3.3",
        "prettier": "^1.7.4"
    },
    "keywords": [
        "gruntplugin"
    ],
    "eslintConfig": {
        "root": true,
        "extends": "prettier",
        "env": {
            "node": true
        },
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "tabWidth": 4,
                    "printWidth": 120
                }
            ],
            "no-unused-vars": [
                "error",
                {
                    "vars": "all",
                    "args": "none"
                }
            ]
        }
    }
}
